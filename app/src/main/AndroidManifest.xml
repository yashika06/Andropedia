<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.yashika.andropedia">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:roundIcon="@mipmap/ic_launcher_circle"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.android.yashika.andropedia.Activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.android.yashika.andropedia.Activity.SubTutorialActivity"
            android:parentActivityName="com.android.yashika.andropedia.Activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.android.yashika.andropedia.Activity.QuizActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.android.yashika.andropedia.Activity.InterviewQuesActivity" />
        <activity android:name="com.android.yashika.andropedia.Activity.InterviewAnsActivity" />
        <activity
            android:name="com.android.yashika.andropedia.Activity.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.android.yashika.andropedia.Activity.TutorialWebviewActivity" />
    </application>

</manifest>