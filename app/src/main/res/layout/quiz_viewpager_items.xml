<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#28B463"
        android:padding="10dp">

        <TextView
            android:id="@+id/question_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/10"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            />
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/timer"
            android:text="Left: "
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            />-->

    </RelativeLayout>

    <TextView
        android:id="@+id/ques_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="10dp"
        android:text="On which thread service work in android?"
        android:textSize="20dp"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_above="@+id/footer_quiz"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:id="@+id/option_1"
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:padding="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/button_options"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/option_2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/button_options"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/option_3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/button_options"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/option_4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/button_options"
            android:layout_margin="5dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/footer_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#28B463"
        android:layout_alignParentBottom="true"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">


            <Button
                android:id="@+id/btn_prev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/arrow_back"
                android:text="Previous"
                android:background="@android:color/transparent"
                android:textAlignment="center"
                />
            <Button
                android:id="@+id/btn_finish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/finish"
                android:text="Finish Test"
                android:visibility="invisible"
                android:background="@android:color/transparent"
                android:textAlignment="center"
                />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/arrow_next"
                android:background="@android:color/transparent"
                android:text="Next"
                android:textAlignment="center"
                />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>